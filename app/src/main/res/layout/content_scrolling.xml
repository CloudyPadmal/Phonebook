<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.knight.phonebook.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:id="@+id/contact_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Personal Details section -->
        <LinearLayout
            android:id="@+id/display_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/display_person_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/display_person_header"
                android:src="@drawable/pb_person_icon" />

            <TextView
                android:id="@+id/display_person_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="Personal Details"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_person"
            android:layout_below="@id/display_person">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Mobile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0710852311"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/mobile_number" />
        </LinearLayout>

        <!-- Locational Details section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/display_location"
            android:layout_below="@id/content_person"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/display_location_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/display_person_header"
                android:src="@android:drawable/ic_dialog_map" />

            <TextView
                android:id="@+id/display_location_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/display_person_header"
                android:layout_toEndOf="@+id/display_person_icon"
                android:layout_toRightOf="@+id/display_person_icon"
                android:gravity="center_vertical"
                android:text="Location"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_location">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/large_text"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
