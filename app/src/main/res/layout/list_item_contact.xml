<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#0288D1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_contact_height">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:id="@+id/contact_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_name_height"
        android:paddingLeft="3dp"
        android:text="Padmal Knight"
        android:id="@+id/contact_name"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:textColor="#E3F2FD"
        android:textStyle="bold"
        android:textSize="20sp"
        android:lines="1"
        android:layout_toLeftOf="@+id/image_land"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_toEndOf="@+id/contact_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/contact_name_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0710852311"
        android:id="@+id/contact_number"
        android:layout_below="@+id/contact_name"
        android:layout_toRightOf="@+id/contact_image"
        android:layout_toEndOf="@+id/contact_image"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:textStyle="italic"
        android:textColor="#212121"
        android:lines="1"
        android:typeface="serif" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/small_image_top_margin"
        android:layout_marginRight="@dimen/small_image_margin"
        android:layout_marginEnd="@dimen/small_image_margin"
        android:id="@+id/image_land"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/pb_land_icon"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/small_image_margin"
        android:id="@+id/image_mobile"
        android:layout_below="@+id/image_land"
        android:layout_alignLeft="@+id/image_email"
        android:layout_alignStart="@+id/image_email"
        android:src="@drawable/pb_mobile_icon"/>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/small_image_margin"
        android:id="@+id/image_email"
        android:layout_below="@+id/image_mobile"
        android:layout_alignLeft="@+id/image_land"
        android:layout_alignStart="@+id/image_land"
        android:src="@drawable/pb_email_icon"/>

</RelativeLayout>